{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}

    <div class="container">
        <h1>Catégorie : {{ category.name }}</h1>
        {# TODO: Gérer la pluralization en utilisant le module translation de Symfony #}
        <p>Il y a {{ category.projects|length }} projets dans cette catégorie :</p>
        <div class="row">
            {% for project in category.projects %}
                <article class="col-4">
                    {% include 'project/_thumbnail.html.twig' with {'project': project} only %}
                </article>
            {% endfor %}
        </div>
    </div>

{% endblock %}
