{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ category.name }}</h1>
        <p>Voici les projets dans cette catégorie :</p>
        <div class="row">
            {% for category in categories %}
            <article class="col-4">
                <div class="card">
                    <img src="uploads/project1.jpg" class="card-img-top" alt="Good Girl">
                    <div class="card-body">
                        <h5 class="card-title">{{ project.name }}</h5>
                        <ul class="badges">
                            <li><a href="{{ path('category_show', {'id': category.id}) }}" class="badge badge-pill badge-primary">Film</a></li>
                        </ul>
                        <p class="card-text">Ce film parle de ...</p>
                        <a href="{{ asset('uploads/project1.jpg' ~project.image) }}" class="btn btn-primary"><i class="fa fa-eye"></i>Voir plus</a>
                    </div>
                </div>
            </article>
            {% endfor %}
            <article class="col-4">
                <div class="card">
                    <img src="images/placeholder.png" class="card-img-top" alt="Les yeux dans le bus">
                    <div class="card-body">
                        <h5 class="card-title">Les yeux dans le bus</h5>
                        <ul class="badges">
                            <li><a href="{{ path('category_show', {'id': category.id}) }}" class="badge badge-pill badge-primary">Film</a></li>
                            <li><a href="{{ path('category_show', {'id': category.id}) }}" class="badge badge-pill badge-primary">Sport</a></li>
                        </ul>
                        <p class="card-text">Revivez la grande épopée de l'équipe de France de football lors du mondial de football 2010.</p>
                        <a href="project.html" class="btn btn-primary"><i class="fa fa-eye"></i>Voir plus</a>
                    </div>
                </div>
            </article>
            <article class="col-4">
                <div class="card">
                    <img src="uploads/project4.jpg" class="card-img-top" alt="DOOSH">
                    <div class="card-body">
                        <h5 class="card-title">DOOSH</h5>
                        <ul class="badges">
                            <li><a href="{{ path('category_show', {'id': category.id}) }}" class="badge badge-pill badge-primary">Musique</a></li>
                            <li><a href="{{ path('category_show', {'id': category.id}) }}" class="badge badge-pill badge-primary">Film</a></li>
                        </ul>
                        <p class="card-text">Venez m'accompagner dans mon projet de création musicale avec clip vidéo !</p>
                        <a href="project.html" class="btn btn-primary">
                            <i class="fa fa-eye"></i>
                            Voir plus
                        </a>
                    </div>
                </div>
            </article>
        </div>
    </div>

    <a href="{{ path('category_new') }}">Create new</a>
{% endblock %}